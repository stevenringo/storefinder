<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_stores_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_store_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_store_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_store.lmaa", :default => t("activerecord.labels.lmaa", :default => "Lmaa")) %>:</b>
          <%= @store.lmaa %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_store.customer_code", :default => t("activerecord.labels.customer_code", :default => "Customer code")) %>:</b>
          <%= @store.customer_code %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_store.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @store.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_store.address_1", :default => t("activerecord.labels.address_1", :default => "Address 1")) %>:</b>
          <%= @store.address_1 %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_store.address_2", :default => t("activerecord.labels.address_2", :default => "Address 2")) %>:</b>
          <%= @store.address_2 %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_store.suburb", :default => t("activerecord.labels.suburb", :default => "Suburb")) %>:</b>
          <%= @store.suburb %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_store.state", :default => t("activerecord.labels.state", :default => "State")) %>:</b>
          <%= @store.state %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_store.postcode", :default => t("activerecord.labels.postcode", :default => "Postcode")) %>:</b>
          <%= @store.postcode %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_store.lat", :default => t("activerecord.labels.lat", :default => "Lat")) %>:</b>
          <%= @store.lat %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_store.lng", :default => t("activerecord.labels.lng", :default => "Lng")) %>:</b>
          <%= @store.lng %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_store_path(@store), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_store_path(@store), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>